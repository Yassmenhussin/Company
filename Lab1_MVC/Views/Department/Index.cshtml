@*<h1>@ViewData["id"]</h1>
<h1>@ViewBag.name</h1>*@
@*<h1> welcome @ViewBag.userName Your Id Number Is @ViewBag.id </h1>*@
<h1>Departments</h1>
<a class="btn btn-success" asp-action="Create" asp-controller="Department"> Create New Department</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Department department in Model)
        {
            <tr>
                <td>@department.id</td>
                <td>@department.name</td>
                <td> <a asp-controller="Department" asp-action="Info" asp-route-Id="@department.id" class="btn btn-primary"> Details </a> </td>
                <td> <a asp-controller="Department" asp-action="Edit" asp-route-Id="@department.id" class="btn btn-warning"> Edit </a> </td>
                <td> <a asp-controller="Department" asp-action="Delete" asp-route-Id="@department.id" class="btn btn-danger"> Delete </a> </td>
            </tr>
        }
    </tbody>
</table>